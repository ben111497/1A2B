<resources xmlns:tools="http://schemas.android.com/tools">
    <style name= "roundimageview" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="color">@color/white_FFFFFF</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- ActionBar -->
        <item name="android:windowActionBar">false</item>
        <!-- 標題 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 陰影 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="dialog_style_zoom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_zoom_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_zoom_exit</item>
    </style>
</resources>