<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/clOut"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/black_000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectangle_white_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="提示"
            android:textColor="@color/red_E64646"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="點擊要獲得提示的位置"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/black_000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <TextView
            android:id="@+id/tvAnswer1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_max="40dp"
            app:layout_constraintWidth_max="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/bg_game_answer"
            android:gravity="center"
            android:maxWidth="40dp"
            android:maxHeight="40dp"
            android:tag="1"
            android:textColor="@color/black_000000"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/tvAnswer2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/tvAnswer2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_max="40dp"
            app:layout_constraintWidth_max="40dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_game_answer"
            android:gravity="center"
            android:tag="2"
            android:textColor="@color/black_000000"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/tvAnswer3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tvAnswer1"
            app:layout_constraintTop_toTopOf="@+id/tvAnswer1" />

        <TextView
            android:id="@+id/tvAnswer3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHeight_max="40dp"
            app:layout_constraintWidth_max="40dp"
            android:background="@drawable/bg_game_answer"
            android:gravity="center"
            android:tag="3"
            android:textColor="@color/black_000000"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/tvAnswer4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tvAnswer2"
            app:layout_constraintTop_toTopOf="@+id/tvAnswer2" />

        <TextView
            android:id="@+id/tvAnswer4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_max="40dp"
            app:layout_constraintWidth_max="40dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_game_answer"
            android:gravity="center"
            android:tag="4"
            android:textColor="@color/black_000000"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/tvAnswer5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tvAnswer3"
            app:layout_constraintTop_toTopOf="@+id/tvAnswer3" />

        <TextView
            android:id="@+id/tvAnswer5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_max="40dp"
            app:layout_constraintWidth_max="40dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_game_answer"
            android:gravity="center"
            android:tag="5"
            android:textColor="@color/black_000000"
            android:textSize="16dp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/tvAnswer6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tvAnswer4"
            app:layout_constraintTop_toTopOf="@+id/tvAnswer3"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvAnswer6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_max="40dp"
            app:layout_constraintWidth_max="40dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_game_answer"
            android:gravity="center"
            android:tag="6"
            android:textColor="@color/black_000000"
            android:textSize="16dp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tvAnswer5"
            app:layout_constraintTop_toTopOf="@+id/tvAnswer3"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>